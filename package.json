{
  "name": "react-ssr-streaming",
  "version": "1.0.0",
  "description": "React SSR with Static Shell (SSG) and Streaming SSR using React 18",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"yarn dev:server\" \"yarn dev:client\" \"yarn dev:widget\"",
    "dev:server": "tsx watch --clear-screen=false src/server/index.ts",
    "dev:widget": "cd widget && yarn preview",
    "dev:client": "vite build --watch",
    "build": "yarn build:widget && yarn build:client && yarn build:server",
    "build:client": "vite build",
    "build:widget": "cd widget && yarn build",
    "build:server": "tsc --project tsconfig.server.json",
    "start": "NODE_ENV=production node dist/server/index.js",
    "generate:shell": "tsx src/server/generate-shell.ts",
    "install:all": "yarn install && cd widget && yarn install"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@originjs/vite-plugin-federation": "^1.4.1",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "vite": "^5.0.6"
  },
  "packageManager": "yarn@1.22.22+sha1.ac34549e6aa8e7ead463a7407e1c7390f61a6610"
}
